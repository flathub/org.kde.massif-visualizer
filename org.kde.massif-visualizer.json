{
    "id": "org.kde.massif-visualizer",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.7",
    "sdk": "org.kde.Sdk",
    "command": "massif-visualizer",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=cups",
        "--socket=fallback-x11",
        "--socket=wayland"
    ],
    "rename-icon": "massif-visualizer",
    "modules": [
        {
            "name": "boost",
            "buildsystem": "simple",
            "build-commands": [
                "./bootstrap.sh --prefix=/app",
                "./b2 -j $FLATPAK_BUILDER_N_JOBS",
                "./b2 install"
            ],
            "cleanup": [
                "/lib/libboost_*.a"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://boostorg.jfrog.io/artifactory/main/release/1.86.0/source/boost_1_86_0.tar.bz2",
                    "sha256": "1bed88e40401b2cb7a1f76d4bab499e352fa4d0c5f31c0dbae64e24d34d7513b",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 6845,
                        "stable-only": true,
                        "url-template": "https://boostorg.jfrog.io/artifactory/main/release/$version/source/boost_${major}_${minor}_$patch.tar.bz2"
                    }
                }
            ]
        },
        {
            "name": "graphviz",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.com/api/v4/projects/4207231/packages/generic/graphviz-releases/12.1.1/graphviz-12.1.1.tar.xz",
                    "sha256": "8dd4fa2a30a80e9ee4a11ad4f43f4a900d683684e824681b084a1dc86777a2a3",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 1249,
                        "stable-only": true,
                        "url-template": "https://gitlab.com/api/v4/projects/4207231/packages/generic/graphviz-releases/$version/graphviz-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "kgraphviewer",
            "buildsystem": "cmake",
            "post-install": [
                "rm /app/share/applications/org.kde.kgraphviewer.desktop",
                "rm /app/share/metainfo/org.kde.kgraphviewer.appdata.xml"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/24.08.1/src/kgraphviewer-24.08.1.tar.xz",
                    "sha256": "35d46abf16e52d064a240e94690e0789719c9e5362eb587ea415ee401dbec3c5",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/kgraphviewer-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "kdiagram",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/kdiagram/3.0.1/kdiagram-3.0.1.tar.xz",
                    "sha256": "4659b0c2cd9db18143f5abd9c806091c3aab6abc1a956bbf82815ab3d3189c6d",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 17734,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/kdiagram/$version/kdiagram-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "massif-visualizer",
            "buildsystem": "cmake-ninja",
            "post-install": [
                "desktop-file-edit --set-key=\"Icon\" --set-value=\"${FLATPAK_ID}\" \"${FLATPAK_DEST}/share/applications/${FLATPAK_ID}.desktop\""
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/24.08.1/src/massif-visualizer-24.08.1.tar.xz",
                    "sha256": "cc8901f69ecbb97bf910df700abf5e0b4944ca45e9116b8c41d457f86019412c",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/massif-visualizer-$version.tar.xz"
                    }
                },
                {
                    "type": "patch",
                    "path": "0001-appdata-Add-category-Development.patch"
                },
                {
                    "type": "patch",
                    "path": "0002-appdata-Fix-URL.patch"
                },
                {
                    "type": "patch",
                    "path": "0003-appdata-Keep-old-name.patch"
                }
            ]
        }
    ]
}
