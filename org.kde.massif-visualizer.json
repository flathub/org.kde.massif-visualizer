{
    "id": "org.kde.massif-visualizer",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-23.08",
    "sdk": "org.kde.Sdk",
    "command": "massif-visualizer",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=cups",
        "--socket=fallback-x11",
        "--socket=wayland"
    ],
    "rename-icon": "massif-visualizer",
    "modules": [
        {
            "name": "boost",
            "buildsystem": "simple",
            "build-commands": [
                "./bootstrap.sh --prefix=/app",
                "./b2 -j $FLATPAK_BUILDER_N_JOBS",
                "./b2 install"
            ],
            "cleanup": [
                "/lib/libboost_*.a"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://boostorg.jfrog.io/artifactory/main/release/1.85.0/source/boost_1_85_0.tar.bz2",
                    "sha256": "7009fe1faa1697476bdc7027703a2badb84e849b7b0baad5086b087b971f8617",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 6845,
                        "stable-only": true,
                        "url-template": "https://boostorg.jfrog.io/artifactory/main/release/$version/source/boost_${major}_${minor}_$patch.tar.bz2"
                    }
                }
            ]
        },
        {
            "name": "graphviz",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.com/api/v4/projects/4207231/packages/generic/graphviz-releases/12.1.0/graphviz-12.1.0.tar.xz",
                    "sha256": "fa174c57b11f3ca48f096cf3d4dafa695bcc30a6ffea61804efe3f91ed9bc7ba",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 1249,
                        "stable-only": true,
                        "url-template": "https://gitlab.com/api/v4/projects/4207231/packages/generic/graphviz-releases/$version/graphviz-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "kgraphviewer",
            "buildsystem": "cmake",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/kgraphviewer/2.4.3/kgraphviewer-2.4.3a.tar.xz",
                    "sha256": "54e0c218453912ea82ad9a96edfb2d4dfd8cb15f6a567ef843b4ef97d07bd7c0"
                }
            ]
        },
        {
            "name": "kdiagram",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/kdiagram/2.8.0/kdiagram-2.8.0.tar.xz",
                    "sha256": "579dad3bd1ea44b5a20c0f133ebf47622e38960f9c7c8b3a316be30a369f431f",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 17734,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/kdiagram/$version/kdiagram-$version.tar.xz",
                        "versions": {
                            "<": "3"
                        }
                    }
                }
            ]
        },
        {
            "name": "massif-visualizer",
            "buildsystem": "cmake-ninja",
            "post-install": [
                "desktop-file-edit --set-key=\"Icon\" --set-value=\"${FLATPAK_ID}\" \"${FLATPAK_DEST}/share/applications/${FLATPAK_ID}.desktop\""
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/massif-visualizer/0.8.0/src/massif-visualizer-0.8.0.tar.xz",
                    "sha256": "5fad3f0e0d9fbb6bc8cfb744cb4e2c99f231d57ee0dd66dd594d36c2cc588a80",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 242862,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/massif-visualizer/$version/src/massif-visualizer-$version.tar.xz"
                    }
                },
                {
                    "type": "patch",
                    "path": "0001-appdata.xml-Minor-fixes-for-submission-to-Flathub.patch"
                },
                {
                    "type": "patch",
                    "path": "0001-Appdata-Add-developer-name.patch"
                }
            ]
        }
    ]
}
